@model CA2_MovieFacts.Models.Actor

@{
    ViewBag.Title = "DeleteActor";
}

<div class="container">
    <div class="panel panel-success">
        <div class="panel-heading"> <h2> Confirm deletion of <strong>'@Model.ActorName'</strong> from the list of Actors</h2></div>
    </div>

<div class="well">
        <div class="panel-body">
            <h3>Are you sure you want to delete this Actor?</h3>
            <fieldset>
                <div class="list-group">
                    <a href="#" class="list-group-item active">
                        <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.ActorName)</h4>
                        <p class="list-group-item-text">@Html.DisplayFor(model => model.ActorName)</p>
                    </a>
                    <a href="#" class="list-group-item active">
                        <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Biography)</h4>
                        <p class="list-group-item-text">@Html.DisplayFor(model => model.Biography)</p>
                    </a>
                </div>
            </fieldset>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p>
                    <input type="submit" value="Delete" class="btn btn-danger" /> 

                    <a class="btn btn-success" href="@Url.Action("Index")">
                        <span class="glyphicon glyphicon-home"></span>&nbsp;Back to List
                    </a>
                    @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })*@
                </p>
            }
        </div>
    </div>
</div>